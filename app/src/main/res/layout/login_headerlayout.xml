<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_material"
    tools:context="com.curiosity.mycalendar.MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tag_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/background_material"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingBottom="4dp"
        android:text="@string/usr_name"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/tag_image"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tag_institute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/usr_institute"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:layout_below="@+id/tag_name"
        android:layout_alignStart="@+id/tag_name" />

    <TextView
        android:id="@+id/tag_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/usr_major"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:layout_below="@+id/tag_institute"
        android:layout_alignStart="@+id/tag_institute" />

    <TextView
        android:id="@+id/tag_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/usr_class"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:layout_alignStart="@+id/tag_major"
        android:layout_below="@+id/tag_major"/>
</RelativeLayout>